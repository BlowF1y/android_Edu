<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InitActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/init_tv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="30dp"></TextView>
        <Button
            android:id="@+id/btn_move_calc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="계산기"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_move_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Next"
            android:layout_margin="5dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_move_List"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="List"
            android:layout_margin="5dp"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_research"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="research"
            android:layout_margin="5dp"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_Myorder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="order"
            android:layout_margin="5dp"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_move_List_custom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Custom_List"
            android:layout_margin="5dp"
            android:textSize="20dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>